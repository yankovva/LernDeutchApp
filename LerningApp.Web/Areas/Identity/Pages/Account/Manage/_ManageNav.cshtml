@using LerningApp.Areas.Identity.Pages.Account.Manage

<div class="manage-nav card shadow-sm">
    <div class="card-body">
        <div class="manage-title">Профил</div>
        <div class="list-group list-group-flush">
            <a class="list-group-item list-group-item-action @ManageNavPages.IndexNavClass(ViewContext)" asp-page="./Index">
                Основни данни
            </a>
            <a class="list-group-item list-group-item-action @ManageNavPages.ChangePasswordNavClass(ViewContext)" asp-page="./ChangePassword">
                Смяна на парола
            </a>
        </div>
    </div>
</div>

<style>
    .manage-nav {
        border-radius: 14px;
        border: 1px solid #e5e7eb;
        background: linear-gradient(180deg, #ffffff 0%, #f8fafc 100%);
    }

    .manage-title {
        font-weight: 700;
        font-size: 0.95rem;
        letter-spacing: 0.04em;
        text-transform: uppercase;
        color: #334155;
        margin-bottom: 10px;
    }

    .manage-nav .list-group-item {
        border: 0;
        border-radius: 10px;
        margin-bottom: 6px;
        background: #ffffff;
    }

    .manage-nav .list-group-item.active,
    .manage-nav .list-group-item.active:hover {
        background: #e0f2fe;
        color: #0f172a;
        font-weight: 600;
    }
</style>
