@using LerningApp.Web.ViewModels.Course
@model AddCourseViewModel
@{
    ViewData["Title"] = "Create Course";
}

<div class="row justify-content-center">
    <div class="col-md-7 col-lg-6">
        <div class="card shadow-sm">
            <div class="card-body p-4">
                <h2 class="mb-3">➕ Създай курс</h2>
                <p class="text-muted mb-4">Попълни информацията за курса.</p>

                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" placeholder="Напр. ASP.NET Basics" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="4"
                                  placeholder="Кратко описание..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="LevelId" class="form-label">Ниво</label>

                        <select asp-for="LevelId" class="form-select">
                            <option value="">-- Избери ниво --</option>

                            @foreach (var level in Model.Levels)
                            {
                                <option value="@level.Id" selected="@(Model.LevelId == level.Id)">
                                    @level.Name
                                </option>
                            }
                        </select>

                        <span asp-validation-for="LevelId" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Създай</button>
                        <a asp-action="Index" class="btn btn-outline-secondary">Отказ</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
