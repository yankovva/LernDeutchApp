@using LerningApp.Web.ViewModels.Lesson
@model LessonContentViewModel

@{
    ViewData["Title"] = "Lesson Details";
}

<style>
    .meta-pill {
        border: 1px solid #dee2e6;
        border-radius: 999px;
        padding: 6px 12px;
        background: #fff;
        font-size: 0.9rem;
    }

    .lesson-section {
        border: 1px solid #e5e7eb;
        border-radius: 14px;
        padding: 16px;
        background: #fff;
        margin-bottom: 16px;
    }

    .lesson-section h5 {
        margin-bottom: 10px;
    }

    .lesson-content {
        white-space: pre-wrap;
        line-height: 1.7;
        font-size: 1rem;
    }

    .section-label {
        font-size: 0.75rem;
        text-transform: uppercase;
        color: #6b7280;
        letter-spacing: 0.04em;
        margin-bottom: 6px;
    }
    .lesson-sections {
        display: flex;
        flex-direction: column;
        gap: 14px;
        margin-top: 16px;
    }

    .section-card {
        border: 1px solid #e5e7eb;
        border-radius: 12px;
        padding: 14px;
        background: #ffffff;
    }

    .section-head {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 8px;
    }

    .section-type {
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.75rem;
        letter-spacing: 0.05em;
        color: #334155;
        background: #f1f5f9;
        padding: 4px 8px;
        border-radius: 999px;
    }

    .section-order {
        font-size: 0.75rem;
        color: #94a3b8;
    }

    .section-content {
        white-space: pre-wrap;
        line-height: 1.6;
    }
</style>

