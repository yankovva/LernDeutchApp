@using LerningApp.Web.ViewModels.Lesson
@model AddLessonToCourseViewModel

@{
    ViewData["Title"] = "Assign lesson to course";
}

<style>
    .course-list {
        max-height: 420px;
        overflow: auto;
        border: 1px solid #dee2e6;
        border-radius: 12px;
        padding: 10px;
        background: #fff;
    }

    .course-row {
        border-radius: 10px;
        padding: 10px 12px;
        transition: background-color .15s ease-in-out;
    }

    .course-row:hover { background-color: #f8f9fa; }

    .course-name { font-weight: 600; }

    .muted-id {
        font-size: .75rem;
        color: #adb5bd;
        word-break: break-all;
    }
</style>

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1 class="mb-1">üéØ –ò–∑–±–æ—Ä –Ω–∞ –∫—É—Ä—Å –∑–∞ —É—Ä–æ–∫</h1>
        <div class="text-muted">–£—Ä–æ–∫—ä—Ç –º–æ–∂–µ –¥–∞ –±—ä–¥–µ –¥–æ–±–∞–≤–µ–Ω –∫—ä–º –µ–¥–∏–Ω –∫—É—Ä—Å.</div>
    </div>

    <a asp-action="Index" class="btn btn-outline-secondary">‚Üê –ù–∞–∑–∞–¥</a>
</div>

<div class="card shadow-sm">
    <div class="card-body p-4">

        <div class="mb-3">
            <span class="badge bg-secondary">Lesson</span>
            <h4 class="mt-2">@Model.LessonName</h4>
            <div class="muted-id">LessonId: @Model.LessonId</div>
        </div>

        <hr class="my-4" />

        <form asp-action="AddToCourse" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="LessonId" />
            <input type="hidden" asp-for="LessonName" />

            <div class="mb-3">
                <input id="courseSearch"
                       type="text"
                       class="form-control"
                       placeholder="–¢—ä—Ä—Å–∏ –∫—É—Ä—Å –ø–æ –∏–º–µ..." />
            </div>


            <div class="course-list" id="courseList">
                @for (int i = 0; i < Model.Courses.Count; i++)
                {
                    var c = Model.Courses[i];

                    <div class="course-row d-flex justify-content-between align-items-center"
                         data-name="@(c.CourseName.ToLowerInvariant())">

                        <div class="d-flex flex-column">
                            <label class="form-check-label course-name" for="course_@i">
                                @c.CourseName
                            </label>
                            <div class="muted-id">CourseId: @c.CourseId</div>
                        </div>

                        <div class="form-check m-0">
                            <input class="form-check-input"
                                   type="radio"
                                   id="course_@i"
                                   name="SelectedCourseId"
                                   value="@c.CourseId"
                                   checked="@(Model.SelectedCourseId == c.CourseId)" />
                        </div>
                    </div>
                }
            </div>

            <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-primary">üíæ –ó–∞–ø–∞–∑–∏</button>
                <a asp-action="Index" class="btn btn-outline-secondary">–û—Ç–∫–∞–∑</a>
            </div>
        </form>
    </div>
</div>

<script>
    (function () {
        const search = document.getElementById('courseSearch');
        const list = document.getElementById('courseList');
        const rows = Array.from(list.querySelectorAll('[data-name]'));

        search.addEventListener('input', () => {
            const term = (search.value || '').toLowerCase();
            rows.forEach(r => {
                const name = r.getAttribute('data-name');
                r.style.display = name.includes(term) ? '' : 'none';
            });
        });
    })();
</script>
